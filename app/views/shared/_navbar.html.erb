<div class="container">
  <div class="navbar navbar-expand navbar-light navbar-teamind">
    <%= link_to "/", class: "navbar-brand" do %>
      <%# teamind logo%>
      <%= image_tag "teamind_logo.png", alt: "teamind", style: "height:50px;width:auto;" %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <p>Welcome <%= current_user.first_name %>!</p>
              <%= link_to "My Teams", "/teams", class: "dropdown-item" %>
              <hr class="dropdown-divider">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link", id: "small-btn" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
